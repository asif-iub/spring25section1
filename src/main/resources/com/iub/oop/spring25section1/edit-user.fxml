<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iub.oop.spring25section1.EditUserController">
   <children>
      <TextField fx:id="usernameTF" promptText="Username">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="passwordTF" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <ComboBox fx:id="ageCB" prefWidth="150.0" promptText="Age" />
      <Button onAction="#updateUser" text="Update">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button onAction="#cancel" text="Cancel">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
